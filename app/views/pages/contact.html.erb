<div class="max-w-2xl mx-auto py-16 px-6">
  <h1 class="text-4xl font-bold mb-6">Contact Us</h1>
  <form class="space-y-4">
    <input type="text" placeholder="Your Name" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-400" />
    <input type="email" placeholder="Your Email" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-400" />
    <textarea placeholder="Your Message" rows="5" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-400"></textarea>
    <button class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">Send</button>
  </form>
</div>
