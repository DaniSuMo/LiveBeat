<div class="space-y-4" data-controller="toggle">
  <label class="block text-sm font-medium text-white/90 mb-2"><%= label_text || "Choose Your Account Type" %></label>

  <!-- Hidden field for user_type -->
  <%= form.hidden_field :user_type, value: checked_value || 'user' %>

  <!-- User Type Cards -->
  <div class="flex flex-row w-full justify-center gap-8">
    <!-- User Card -->
    <div class="relative w-80">
      <div class="block cursor-pointer group"
           data-action="click->toggle#toggleUser">
        <div class="bg-white/20 rounded-xl p-6 border-2 border-transparent transition-all duration-300 hover:bg-white/30 hover:border-white/30 group-data-[selected=true]:bg-white/30 group-data-[selected=true]:border-purple-400">
          <div class="text-center space-y-3">
            <div class="mx-auto w-25 h-25 bg-white/20 rounded-full flex items-center justify-center transition-transform duration-300"
                 data-toggle-target="userIcon"
                 style="width: 100px; height: 100px;">
              <svg class="w-12 h-12 text-white/80 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 48px; height: 48px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-white/90 transition-colors duration-300"
                  data-toggle-target="userLabel">User</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Venue Card -->
    <div class="relative w-80">
      <div class="block cursor-pointer group"
           data-action="click->toggle#toggleVenue">
        <div class="bg-white/20 rounded-xl p-6 border-2 border-transparent transition-all duration-300 hover:bg-white/30 hover:border-white/30 group-data-[selected=true]:bg-white/30 group-data-[selected=true]:border-purple-400">
          <div class="text-center space-y-3">
            <div class="mx-auto w-25 h-25 bg-white/20 rounded-full flex items-center justify-center transition-transform duration-300"
                 data-toggle-target="venueIcon"
                 style="width: 100px; height: 100px;">
              <svg class="w-12 h-12 text-white/80 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 48px; height: 48px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-white/90 transition-colors duration-300"
                  data-toggle-target="venueLabel">Venue Owner</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Selection Indicator -->
  <div class="relative bg-white/20 rounded-xl p-1 h-12 w-64 mx-auto">
    <div class="absolute inset-1 bg-white/30 rounded-lg transition-all duration-300 ease-in-out"
         data-toggle-target="slider"
         style="width: calc(50% - 2px); transform: translateX(<%= checked_value == 'venue' ? '100%' : '0' %>);"></div>
    <div class="relative flex h-full">
      <div class="flex-1 flex items-center justify-center">
        <span class="text-sm font-medium text-white/80 transition-colors duration-300">User</span>
      </div>
      <div class="flex-1 flex items-center justify-center">
        <span class="text-sm font-medium text-white/80 transition-colors duration-300">Venue</span>
      </div>
    </div>
  </div>
</div>
