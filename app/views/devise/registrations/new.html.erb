<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-600 to-blue-500 text-white">
  <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl max-w-[600px] w-[600px]">
    <div class="text-center space-y-6">
      <header class="space-y-2">
        <h2 class="text-3xl font-bold text-white">Join LiveBeat </h2>
        <p class="text-white/80">Create your account to get started</p>
      </header>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- User Type Selection -->
        <%= render "shared/user_type_selector", form: f, checked_value: 'user', label_text: "Choose Your Account Type" %>

        <div class="space-y-4">
          <% input_classes = "w-full px-4 py-3 rounded-xl border-0 bg-white/20 text-purple-700 placeholder-white/60 focus:bg-white/30 focus:ring-2 focus:ring-white/50 transition-all" %>
          <% label_classes = "block text-sm font-medium text-white/90 mb-2" %>

          <!-- Name Fields -->
          <div class="grid grid-cols-2 gap-4">
            <div class="form-group">
              <%= f.label :first_name, class: label_classes %>
              <%= f.text_field :first_name,
                  autofocus: true,
                  class: input_classes,
                  placeholder: "First Name" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, class: label_classes %>
              <%= f.text_field :last_name,
                  class: input_classes,
                  placeholder: "Last Name" %>
            </div>
          </div>

          <!-- Venue Name Field (conditional) -->
          <div class="form-group" id="venue-name-field" style="display: none;">
            <%= f.label :venue_name, "Venue Name", class: label_classes %>
            <%= f.text_field :venue_name,
                class: input_classes,
                placeholder: "Enter your venue name" %>
          </div>

          <!-- Email -->
          <div class="form-group">
            <%= f.label :email, class: label_classes %>
            <%= f.email_field :email,
                autocomplete: "email",
                class: input_classes,
                placeholder: "Email Address" %>
          </div>

          <!-- Phone Number -->
          <div class="form-group">
            <%= f.label :phone_number, class: label_classes %>
            <%= f.telephone_field :phone_number,
                class: input_classes,
                placeholder: "Phone Number" %>
          </div>

          <!-- Address -->
          <div class="form-group">
            <%= f.label :address, class: label_classes %>
            <%= f.text_field :address,
                class: input_classes,
                placeholder: "Address" %>
          </div>

          <!-- Date of Birth -->
          <div class="form-group">
            <%= f.label :date_of_birth, class: label_classes %>
            <%= f.date_field :date_of_birth,
                class: input_classes %>
          </div>

          <!-- Password Fields -->
          <div class="form-group">
            <%= f.label :password, class: label_classes %>
            <% if @minimum_password_length %>
              <span class="text-xs text-white/60">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
            <%= f.password_field :password,
                autocomplete: "new-password",
                class: input_classes,
                placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: label_classes %>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: input_classes,
                placeholder: "Confirm Password" %>
          </div>
        </div>

        <div class="space-y-4">
          <%= f.submit "Sign Up",
              class: "w-full px-6 py-3 bg-white text-purple-700 rounded-xl hover:bg-purple-100 transition font-semibold" %>
        </div>
      <% end %>

      <footer class="pt-4 border-t border-white/20">
        <%= render "devise/shared/links" %>
      </footer>
    </div>
  </div>
</div>
