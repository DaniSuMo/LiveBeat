<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-600 to-blue-500 text-white">
  <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl max-w-[600px] w-[600px]">
    <div class="text-center space-y-6">
      <header class="space-y-2">
        <h2 class="text-3xl font-bold text-white">Welcome Back ðŸŽµ</h2>
        <p class="text-white/80">Sign in to your LiveBeat account</p>
      </header>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div class="space-y-4">
          <% input_classes = "w-full px-4 py-3 rounded-xl border-0 bg-white/20 text-purple-700 placeholder-white/60 focus:bg-white/30 focus:ring-2 focus:ring-white/50 transition-all" %>
          <% label_classes = "block text-sm font-medium text-white/90 mb-2" %>

          <div class="form-group">
            <%= f.label :email, class: label_classes %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: input_classes %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: label_classes %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: input_classes %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                  class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-white/80" %>
            </div>
          <% end %>
        </div>

        <div class="space-y-4">
          <%= f.submit "Sign In",
              class: "w-full px-6 py-3 bg-white text-purple-700 rounded-xl hover:bg-purple-100 transition font-semibold" %>
        </div>
      <% end %>

      <footer class="pt-4 border-t border-white/20">
        <%= render "devise/shared/links" %>
      </footer>
    </div>
  </div>
</div>
