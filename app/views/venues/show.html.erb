<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-6">
        <div class="flex justify-between items-start mb-6">
          <h1 class="text-3xl font-bold"><%= @venue.name %></h1>
          <div class="flex space-x-4">
            <%= link_to 'Edit', edit_venue_path(@venue), class: "text-green-500 hover:text-green-700" %>
            <%= button_to 'Delete', @venue, method: :delete, class: "text-red-500 hover:text-red-700", form: { data: { turbo_confirm: 'Are you sure?' } } %>
          </div>
        </div>

        <div class="space-y-4">
          <div>
            <h2 class="text-lg font-semibold mb-2">Venue Details</h2>
            <p class="text-gray-600"><strong>Owner:</strong> <%= @venue.user.email %></p>
          </div>

          <% if @venue.scheduled_events.any? %>
            <div>
              <h2 class="text-lg font-semibold mb-2">Upcoming Events</h2>
              <div class="space-y-2">
                <% @venue.scheduled_events.each do |event| %>
                  <div class="bg-gray-50 p-4 rounded-md">
                    <h3 class="font-medium"><%= event.title %></h3>
                    <p class="text-gray-600 text-sm">
                      <%= event.starting_time.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to 'Back to Venues', venues_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
